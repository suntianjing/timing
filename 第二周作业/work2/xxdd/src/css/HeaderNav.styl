theme-color = #00c896
theme-hover-color = #e6faf5

.container
  width 100%
  height 60px
  box-shadow 0 1px 2px 2px rgba(0, 0, 0, .1)
  .w
    width 1000px
    margin 0 auto
    .logo
      float left
      height 60px
      a
        display block
        height 60px
        line-height 60px
        text-decoration none
        img
          float left
          width 30px
          height 30px
          margin 15px
        h1
          float right
          font-size 24px
          height 60px
          margin 0 auto
          color theme-color

    .user
      float right
      height 60px
      width 100px
      .item
        float left
        margin-top 17px
        margin-right 5px
      .avatar
        float right
        margin-top 12px
        margin-right 10px

